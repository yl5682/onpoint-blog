<div class='col-sm-6 col-lg-4'>
  <div class="card">
    <%= link_to post do %>
      <div class="card-topper" style='background-image: url(https://static.pexels.com/photos/573299/pexels-photo-573299.jpeg);'></div>
    <% end %>
    <div class="card-block">
      <h4 class="card-title"><%= link_to post.title, post %></h4>
      <h6 class="published-date">Published Jan 14, 2016</h6>
      <p class="card-text"><%= truncate(post.description, length: 130) %></p>
      <%= link_to 'Read', post, class: "btn btn-read" %>
    </div>
  </div>
</div>
