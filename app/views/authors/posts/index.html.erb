<% provide(:page_title, "All Posts")%>
<% provide(:author_active, "active") %>


<div class="row">
  <div class="col-md-12">
    <div class="title-flexbox">
      <div class="flex-child-left">
        <%= link_to "New Post", new_authors_post_path, class: "btn btn-primary"%>
      </div>

      <div class="flex-child-right text-right">
        <%= @posts.size %> Posts in Total
      </div>
    </div>
    <table class="table table-striped table-hover index-table">
      <tr>
        <th>Post</th>
        <th>Actions</th>
      </tr>
      <%= render @posts %>
    </table>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.description %></td>
        <td><%= post.slug %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_authors_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_authors_post_path %>
